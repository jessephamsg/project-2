<!DOCTYPE html>
<html>
<head>
    <%- include('../app-general/partials/admin-head.ejs') %>
</head>
<body>
    <%- include('../app-general/partials/app-horizontal-nav.ejs') %>
    <div class='admin-body'>
            <div class='left-section'>
                <%- include('../app-general/partials/admin-nav.ejs') %>
            </div>
            <div class='mid-section'>
                <%- include('./partials/admin-mid-nav.ejs', {data}) %>

                <div>
                    <table>
                        <tr>
                          <th>Name</th>
                          <% dates.forEach(date => { %>
                              <th><%=date%></th>
                          <% }) %>
                        </tr>
                        <% for(let datum of data) { %> 
                            <tr>
                            <td class='first-col'><%=datum.formatChildFullName()%></td>
                            <% for (let childPresenceDate of datum.attendance) { %>
                                    <% if(childPresenceDate.isPresent === true) { %>
                                        <td class='marked-present'> 1 </td>
                                    <% } else { %>
                                        <td class='marked-absent'> 0 </td>
                                    <% } %>
                            <% } %>
                            </tr>
                        <% } %>
                      </table>
                </div>
            </div>
            <div class='right-section'>
            </div>
        </div>
</body>
</html>