<!DOCTYPE html>
<html>
<head>
    <%- include('../app-general/partials/admin-head.ejs') %>
</head>
<body>
    <%- include('../app-general/partials/app-horizontal-nav.ejs') %>
    <div class='admin-body'>
        <div class='left-section'>
            <%- include('../app-general/partials/admin-nav.ejs') %>
        </div>
        <div class='mid-section'>
            <%- include('./partials/admin-region-mid-nav.ejs') %>  
            <table>
                <tr>
                        <th>Child's Name</th>
                        <th>DOB</th>
                        <th>Age Group</th>
                        <th>Guardian's Name</th>
                        <th>Guardian's Contact</th>
                        <th>Guardian's Role</th>
                        <th>Guardian's Membership</th>
                        <th>Child's First Seen</th>
                        <th>Child's Last Seen</th>
                </tr>
                <% data.forEach(datum => { %>
                <tr>
                        <td><%= datum.formatChildFullName() %></td>
                        <td><%= datum.dob %></td>
                        <td><%= datum.ageGroup %></td>
                        <td><%= datum.formatGuardianFullName() %></td>
                        <td><%= datum.formatPhoneNumber() %></td>
                        <td><%= datum.guardianRole %></td>
                        <td><%= datum.membership %></td>
                        <td><%= datum.firstSeen %></td>
                        <td><%= datum.lastSeen %></td>
                </tr>
                <% }) %>
            </table>
        </div>
        <div class='right-section'>
        </div>
    </div>
</body>
</html>