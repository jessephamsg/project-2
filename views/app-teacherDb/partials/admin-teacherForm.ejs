<form action='/teachers/age' method='POST'>
    <div class='form-subsection'>
        <div class='input-pair'>
            <label for='firstName'>Teacher's First Name</label><br>
            <input type='text' name='firstName'><br>
        </div>
        <div class='input-pair'>
            <label for='firstName'>Teacher's Last Name</label><br>
            <input type='text' name='lastName'><br>
        </div>
    </div>
    <div class='form-subsection'>
        <div class='input-pair'>
            <label for='dob'>Teacher's Date of Birth</label><br>
            <input type='date' name='dob'><br>
        </div>
        <div class='input-pair'>
            <label for='ageGroup'>Teacher's Assigned Age Group</label><br>
            <select name='ageGroup'>
                <option value='Tots'>Tots</option>
                <option value='Junior'>Junior</option>
                <option value='Lower Primary'>Lower Primary</option>
                <option value='Upper Primary'>Upper Primary</option>
            </select><br>
        </div>
    </div>
    <div class='form-subsection'>
        <div class='input-pair'>
            <label for='startDate'>Teacher's Start Date</label><br>
            <input type='date' name='startDate'><br>
        </div>
        <div class='input-pair'>
            <label for='role'>Role</label><br>
            <select name='role'>
                <option value='Age Group Lead'>Age Group Lead</option>
                <option value='Regional Lead'>Regional Lead</option>
                <option value='Teacher'>Teacher</option>
                <option value='Assistant Teacher'>Assistant Teacher</option>
            </select><br>
        </div>
    </div>
    <div class='form-subsection'>
        <div class='input-pair'>
            <label for='contactNumber'>Teacher's Contact</label><br>
            <input type='text' name='contactNumber'><br>
        </div>
        <div class='input-pair'>
            <label for='address'>Teacher's Address</label><br>
            <input type='text' name='address'><br>
        </div>
        <div class='input-pair'>
            <label for='region'>Teacher's Region</label><br>
            <select name='region'>
                <option value='Jurong East & West'>Jurong East & West</option>
                <option value='Clementi'>Clementi</option>
                <option value='Chua Chu Kang & Bukit Batok'>Chua Chu Kang & Bukit Batok</option>
                <option value='Bukit Panjang'>Bukit Panjang</option>
            </select><br>
        </div>
    </div>
    <input type='submit' value='Save'>
</form>